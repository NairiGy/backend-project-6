extends ../layouts/application.pug

block content
  table.table.table-striped
    thead
      tr
        th= t('views.users.id')
        th= t('views.users.firstName')
        th= t('views.users.lastName')
        th= t('views.users.email')
        th= t('views.users.createdAt')
        th= t('views.users.actions')
    tbody
      each user in users
        tr
          td= user.id
          td= user.firstName
          td= user.lastName
          td= user.email
          td= formatDate(user.createdAt)
          td
            a.btn.btn-primary.me-1(href=`/users/${user.id}`)='Изменить'
            +formFor()(action=`/users/${user.id}` method='post')
              input(name="_method" type="hidden" value="delete")
              input.btn.btn-danger(type="submit" value="Удалить")
